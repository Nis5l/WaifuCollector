<!DOCTYPE html>
<html lang="en">

    <head>

        <%- include('partials/standard_header.ejs') %>

        <title>WaifuCollector | Pack</title>

        <link rel="stylesheet" href="<%= url %>/resources/css/pack.css">
        <link rel="stylesheet" href="<%= url %>/resources/css/dashboard.css">
        <link rel="stylesheet" href="<%= url %>/resources/css/dashboard_sidebar.css">

        <style>

            .nav{

                position: fixed;
                top: 0;
                left: 0;

                box-shadow: 0px 1px 8px rgba(0, 0, 0, 0.5);

            }

        </style>

    </head>

    <body class="scrollable">

        <%- include('partials/nav.ejs') %>

        <div class="sidebar">

            <%- include('partials/dash_nav.ejs') %>

        </div>

        <div class="dashboard_content">
			<div class="dashboard_content_wrapper">
				<div class="packwrapper">
					<div id="Open">
					</div>
				</div>
			</div>
        </div>
    </body>

    <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>

    <%- include('partials/insert_cards.ejs') %>

    <script>
        const cards = <%- JSON.stringify(cards) %>;
        var cardid = 0;
        var opn = document.getElementById("Open");
        insertcards(cards, opn, true, 1);
    </script>

	<script>
		var wcards = $("waifu-card");
		var delay = false;
         $(document).click(function(event) {

          var ele = $(event.target);
         if(ele.is('waifu-card'))
		 {
           ele[0].fit();
           ele[0].turn();
		 }

		var allturned = true;
		for(var i = 0; i < wcards.length; i++)
		{
			if(wcards[i].turned) allturned = false;
		}
		if(allturned)
		{
			if(delay)
			{
				if(ele.is('waifu-card'))
				{
					document.location.href = "/card?uuid=" + ele[0].uuid;
				}else
				{
					document.location.href = "/dashboard";
				}
			}else
			{
				setTimeout(() => {delay = true}, 500);
			}
		}

        }); 
    </script>

    <script src="../resources/components.js"></script> 
    <%- include('partials/error.ejs') %>
</html>
