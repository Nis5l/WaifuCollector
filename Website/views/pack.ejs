<!DOCTYPE html>
<html lang="en">

    <head>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">

        <title>WaifuCollector | Pack</title>

        <link rel="stylesheet" href="resources/css/all.css">
    </head>

    <body>

        <%- include('partials/nav.ejs') %>

		<div class="packwrapper">
			<div id="Open">
			</div>
        </div>

    </body>

    <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>

    <% if (cards != undefined) { %>
        <script>
            const cards = <%- JSON.stringify(cards) %>;
            var opn = document.getElementById('Open');
            
            //var cardSize = 110;
            //var off = 235-(cards.length-1) / 2 * cardSize;
            for(var i = 0; i < cards.length; i++/*,off+=cardSize*/)
            {
              var path = cards[i].cardImage;
              var posX =  0;
              var cardhtml = `<waifu-card id=card${i} img_path=${path} frame-front=${cards[i].frame.path_front} frame-back=${cards[i].frame.path_back} pos-x=${posX} card-name=\"${cards[i].cardName}\" anime-name=\"${cards[i].type.name}\" turned=true quality=${cards[i].quality} level=0 uuid=${cards[i].id} cardID=${cards[i].cardID} card-size=1></waifu-card>`;
              opn.insertAdjacentHTML('beforeend', cardhtml);  
            }
			$('#Open').css('transform', `translateX(calc(50% - 254px * ${cards.length} / 2))`)
        </script>
    <% } %> 

    <script>
         $(document).click(function(event) {
          var ele = $(event.target);
          if(ele.is('waifu-card'))
		 {
           ele[0].fit();
           ele[0].turn();
		 }
        }); 
    </script>

    <script src="../resources/components.js"></script> 
</html>
