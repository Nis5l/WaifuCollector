<!DOCTYPE html>
<html lang="en">
    <head>

        <%- include('partials/standard_header.ejs') %>

        <title>WaifuCollector | Settings</title>

        <link rel="stylesheet" href="<%= url %>/resources/css/settings.css">
        <link rel="stylesheet" href="<%= url %>/resources/css/dashboard.css">
        <link rel="stylesheet" href="<%= url %>/resources/css/dashboard_sidebar.css">

        <style>

            .nav{

                position: fixed;
                top: 0;
                left: 0;

                box-shadow: 0px 1px 8px rgba(0, 0, 0, 0.5);

            }

        </style>

    </head>

    <body class="scrollable">

        <%- include('partials/nav.ejs') %>

        <div class="sidebar">

            <%- include('partials/dash_nav.ejs') %>

        </div>

        <div class="dashboard_content">
			<div class="dashboard_content_wrapper">
				<div class="dashboard_stats">
					<div class="pass_change">
						<div class="pass_change_top">
							<h1 class="pass_change_text">Change Password</h1> 
						</div>
					  <form action="/passchange" method="post">
						  <input type="password" name="password" placeholder="New Password"/>
						  <input type="password" name="password2" placeholder="New Password"/>
						  <input type="submit" value="Change" name="submit"></input>
					  </form>
					</div>
				</div>
			</div>
        </div>

        <script src="../resources/components.js"></script>
        <%- include('partials/error.ejs') %>
</html>
