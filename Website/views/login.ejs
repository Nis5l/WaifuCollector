<!DOCTYPE html>
<html lang="en">

    <head>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">

        <title>WaifuCollector | Login</title>

        <link rel="stylesheet" href="resources/css/all.css">

    </head>

    <body>

        <%- include('partials/nav.ejs') %>

        <div class="content">

            <div class="card">

				<form id="cookieconf" action="/cookie" method="post"></form>
                <form action="/login" method="post">
                    
                    <h1>Login</h1>

                    <input type="text" name="username"placeholder="Username">
                    <input type="password" name="password" placeholder="Password">

                    <input type="submit" name="submit" value="Login">

                    <a href="/register">Haven't got an account? Click here</a>

                </form>

            </div>

        </div>

        <script
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>

    <script src="../resources/components.js"></script> 

	<script>
        <%if (!accepted) { %>
		    document.body.insertAdjacentHTML('afterend',
				`<cookie-confirmation> </cookie-confirmation>`);
			var conf = document.querySelector("cookie-confirmation");
			var frm = document.querySelector("#cookieconf");
			conf.okCallback = () =>
			{
				frm.submit();
				conf.remove();
			};
		<% } %>
	</script>

    </body>

</html>
